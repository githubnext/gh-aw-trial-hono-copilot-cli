{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "rootDir": "./src/",
    "outDir": "./dist/types/",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts"
  ],
  "exclude": [
    "src/mod.ts",
    "src/helper.ts",
    "src/middleware.ts",
    "src/deno/**/*.ts",
    "src/test-utils/*.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ]
}
